%h1 Listing lists

- @lists.each do |list|
  = list.name
  #{list.notes.count} notes
  = link_to 'Show', list
  - if can? :edit, list
    = link_to 'Edit', edit_list_path(list)
    = link_to 'New note in this list', new_list_note_path(list)
  - if can? :delete, list
    = link_to 'Destroy', list, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

= link_to 'New List', new_list_path
